<view class='ticket-container'>
  <scroll-view scroll-y bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" 
    scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
    <!--Tab布局-->
    <view class='title'>
      <block wx:for="{{topNavs}}">
        <view class="tab-item {{currentIndex == index ? 'title-sel-selected' : 'title-sel'}}" bindtap='titleClick'
          data-idx='{{index}}'>
          <text>{{item.catName}}</text>
          <hr class="line-style" />
        </view>
      </block>
    </view>

    <!--内容布局-->
    <swiper class='swiper' bindchange='pagechange' current='{{currentIndex}}'>
      <block wx:for="{{topNavs}}">
        <swiper-item >
          <block wx:for='{{item.novelListReqVo}}'>
          <view class='record-item'>
              <view class='name'>
                <span class='cover' id='{{item.id}}'><image src='{{item.img}}' ></image></span>
                <view class='item'>
                  <span class='title' bindtap='intoNovel' data-id='{{item.id}}'>{{item.title}}</span>
                  <text class='introduction'>{{item.introduction}}</text>
                  <span class='auditor'>作者：{{item.auditor}}</span>
                </view>
              </view>
          </view>
        </block>
        </swiper-item>
      </block>
    </swiper>
  </scroll-view>
</view>