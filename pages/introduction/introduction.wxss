.introduction{
  position: absolute;
  width: 100%;
  height: 30%;
}

.left-in{
  position: absolute;
  width: 40%;
  left: 0;
  text-align: center;
  margin-top: 1rem;
}

.left-in .bookcover{
  width: 6rem;
  height: 8rem;
}

.right-in{
  position: absolute;
  width: 60%;
  right: 0;
  text-align: left;
  margin-top: 1rem;
}

.right-in .title{
  font-size: 30rpx;
  padding-top: 1em;
  width:95%;
  display: block;
}

.right-in .auditor{
  font-size: 30rpx;
  padding-top: 1em;
  width:95%;
  display: block;
  text-decoration-line: underline;
  color: rgb(247, 91, 99)
}

.other{
  position: absolute;
  width: 95%;
  height: 70%;
  bottom: 0;
  margin-left: 1em;
  margin-right: 1em;
  font-size: smaller;
}

.other .intro{
  text-indent:2em;
}

.btn_group{
  position: fixed;
  width: 100%;
  text-align: center;
}

.begin{
  width: 50rpx;
  height: 40rpx;
  background-color: rgb(37, 161, 141);
  color: white;
  vertical-align: middle;
  text-align: center;
  padding: 0.5rem;
  margin-left: 1em;
  margin-right: 1em;
}

.chapter{
  width: 50rpx;
  height: 40rpx;
  background-color: rgb(37, 161, 141);
